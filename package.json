{
  "name": "core-collaboration",
  "version": "1.0.0",
  "repository": "git@github.com:trip-a-trip/core-collaboration.git",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn nodemon",
    "build": "yarn tsn",
    "types": "yarn tsc --noEmit",
    "prod": "yarn node ./dist/main.js",
    "pretty": "yarn prettier --write .",
    "commit": "yarn git-cz",
    "lint:code": "yarn eslint \"./**/*.{ts,tsx}\"",
    "release": "yarn standard-version"
  },
  "dependencies": {
    "@nestjs/common": "^7.1.2",
    "@nestjs/core": "^7.1.2",
    "@nestjs/platform-fastify": "^7.1.2",
    "@nestjs/swagger": "^4.5.9",
    "@nestjs/typeorm": "^7.1.0",
    "@solid-soda/config": "^2.2.0",
    "@solid-soda/evolutions": "^0.1.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "fastify": "^2.14.1",
    "fastify-swagger": "^2.6.0",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@solid-soda/tsn": "^1.2.3",
    "@types/node": "12",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.22",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-node": "latest",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-unicorn": "^18.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.4",
    "standard-version": "^7.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "yarn prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "yarn commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
